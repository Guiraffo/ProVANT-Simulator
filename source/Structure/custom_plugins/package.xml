<package format="2">
  <name>custom_plugins</name>
  <version>1.0.0</version>
  <description>This package provides a set of Gazebo plugins that allow the use
  of the ProVANT simulator, such as the stepping plugin, plugins for simulation
  a servo motor, brushless motors and plugins that allow the publication of the
  UAV states.</description>

  <maintainer email="jeduardo@ufmg.br">Júnio Eduardo de Morais Aquino</maintainer>

  <license>MIT</license>

  <url type="website">http://provant.eng.ufmg.br/provantsimulator</url>
  <url type="repository">https://github.com/Guiraffo/ProVANT-Simulator.git</url>
  <url type="bugtracker">https://github.com/Guiraffo/ProVANT-Simulator/issues</url>

  <author email="avlara@hotmail.com">Arthur Viana Lara</author>
  <author email="jonatan29campo@gmail.com">Jonatan Campos</author>
  <author email="jeduardo@ufmg.br">Júnio Eduardo de Morais Aquino</author>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>provant_simulator_sdf_parser</depend>

  <build_depend>roscpp</build_depend>
  <build_depend>gazebo_ros</build_depend>
  <build_depend>provant_simulator_xml_reader</build_depend>
  <build_depend>std_msgs</build_depend>
  <build_depend>geometry_msgs</build_depend>
  <build_depend>nav_msgs</build_depend>
  <build_depend>visualization_msgs</build_depend>
  <build_depend>simulator_msgs</build_depend>
  <build_depend>tinyxml</build_depend>
  <build_depend>eigen</build_depend>

  <exec_depend>roscpp</exec_depend>
  <exec_depend>gazebo_ros</exec_depend>
  <exec_depend>provant_simulator_xml_reader</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>geometry_msgs</exec_depend>
  <exec_depend>nav_msgs</exec_depend>
  <exec_depend>visualization_msgs</exec_depend>
  <exec_depend>simulator_msgs</exec_depend>
  <exec_depend>tinyxml</exec_depend>
  <exec_depend>eigen</exec_depend>

  <export>
    <!-- From gazebo documentation http://gazebosim.org/tutorials/?tut=ros_plugins-->
    <gazebo_ros plugin_path="${prefix}/../../../../../devel/lib" />
  </export>
</package>