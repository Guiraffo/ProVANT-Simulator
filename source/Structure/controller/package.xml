<package format="2">
  <name>controller</name>
  <version>1.1.0</version>
  <description>
    <p>The controller package provides a node that allows the execution
  of the control strategies in the ProVANT Simulator.</p>
  </description>

  <maintainer email="jeduardo@ufmg.br">Júnio Eduardo de Morais Aquino</maintainer>

  <license>MIT</license>

  <url type="website">http://provant.eng.ufmg.br/provantsimulator</url>
  <url type="repository">https://github.com/Guiraffo/ProVANT-Simulator.git</url>
  <url type="bugtracker">https://github.com/Guiraffo/ProVANT-Simulator/issues</url>

  <author email="avlara@hotmail.com">Arthur Viana Lara</author>
  <author email="jeduardo@ufmg.br">Júnio Eduardo de Morais Aquino</author>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>cmake_modules</build_depend>
  <build_depend>roscpp</build_depend>
  <build_depend>eigen</build_depend>
  <build_depend>simulator_msgs</build_depend>
  <build_depend>control_strategies_base</build_depend>
  <build_depend>provant_simulator_xml_reader</build_depend>

  <exec_depend>roscpp</exec_depend>
  <exec_depend>eigen</exec_depend>
  <exec_depend>simulator_msgs</exec_depend>
  <exec_depend>control_strategies_base</exec_depend>
  <exec_depend>provant_simulator_xml_reader</exec_depend>

  <depend>std_srvs</depend>

  <export>
  </export>
</package>
